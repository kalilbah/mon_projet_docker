{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>{% block title %}Apptuteur{% endblock %}</title>
  <style>
    :root { --bg:#0f172a; --panel:#111827; --muted:#94a3b8; --fg:#e5e7eb; --primary:#22d3ee; --danger:#ef4444; --ok:#10b981; }
    *{box-sizing:border-box}
    html,body{margin:0;padding:0;background:linear-gradient(180deg,#020617 0%,#0b1022 100%) fixed;color:var(--fg);font:16px/1.45 system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Cantarell,"Helvetica Neue",Arial}
    .container{max-width:720px;margin:40px auto;padding:24px}
    .card{background:var(--panel);border:1px solid #1f2937;border-radius:16px;padding:20px;box-shadow:0 10px 30px rgba(0,0,0,.25)}
    h1{font-size:28px;margin:0 0 16px}
    h2{font-size:20px;margin:18px 0 10px;color:var(--muted)}
    p{color:var(--fg)}
    a{color:var(--primary);text-decoration:none}
    a:hover{text-decoration:underline}
    ul{margin:8px 0 0 20px}
    form{display:grid;gap:12px;margin-top:12px}
    label{color:var(--muted)}
    input[type="text"]{padding:10px 12px;border-radius:10px;border:1px solid #334155;background:#0b1220;color:var(--fg);outline:none}
    input[type="text"]:focus{border-color:var(--primary);box-shadow:0 0 0 3px rgba(34,211,238,.2)}
    .btn{display:inline-block;padding:10px 14px;border-radius:10px;border:1px solid #164e63;background:#0e7490;color:white;cursor:pointer}
    .btn:hover{filter:brightness(1.05)}
    .row{display:flex;gap:10px;align-items:center}
    .alert{padding:10px 12px;border-radius:10px;margin-top:10px}
    .alert.ok{background:rgba(16,185,129,.1);border:1px solid rgba(16,185,129,.4)}
    .alert.ko{background:rgba(239,68,68,.1);border:1px solid rgba(239,68,68,.4)}
    .muted{color:var(--muted)}
    .spacer{height:8px}
  </style>
  {% block head %}{% endblock %}
</head>
<body>
  <div class="container">
    <div class="card">
      {% block body %}{% endblock %}
    </div>
  </div>
</body>
</html>
